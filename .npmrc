# Prevent Electron from downloading during npm install
ELECTRON_SKIP_BINARY_DOWNLOAD=1

# Use npm registry cache
registry=https://registry.npmjs.org/

# Increase timeout for slow connections
timeout=300000

# Disable progress bar for cleaner logs
progress=false

# Disable audit for faster installs
audit=false

# Disable funding messages
fund=false

# Disable optional dependencies
optional=false

# Use production mode
production=true

# Disable package-lock generation during builds
package-lock=false

# Increase max sockets for better download performance
maxsockets=50

# Disable update notifier
update-notifier=false
